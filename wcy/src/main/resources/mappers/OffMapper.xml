<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.wecodeyou.off.repository.IOffMapper">



	<resultMap id="OffMap" type="com.it.wecodeyou.off.model.OffVO">
		<id property="offNo" column="off_no"/>
		<result property="offAuthor" column="off_author"/>
		<result property="offCategory" column="off_category"/>
		<result property="offPlace" column="off_place"/>
		<result property="offRoom" column="off_room"/>
		<result property="offProductNo" column="off_product_no"/>
		<result property="offUploadUri" column="off_upload_uri"/>
		<result property="offSeats" column="off_seats"/>
		<result property="offStartAt" column="off_start_at"/>
		<result property="offEndAt" column="off_end_at"/>
		<result property="offCreatedAt" column="off_created_at"/>
		<result property="offModifiedAt" column="off_modified_at"/>	
	</resultMap>
	
	<resultMap id="OffProductMap" type="com.it.wecodeyou.off.model.OffProductVO">
		<result property="productNo" column="product_no"/>
		<result property="productType" column="product_type"/>
		<result property="productName" column="product_name"/>
		<result property="productPrice" column="product_price"/>
		<result property="productDetail" column="product_detail"/>
		<result property="productCreatedAt" column="product_created_at"/>
		<result property="productThumb" column="product_thumb"/>
		<result property="offNo" column="off_no"/>
		<result property="offAuthor" column="off_author"/>
		<result property="offCategory" column="off_category"/>
		<result property="offPlace" column="off_place"/>
		<result property="offRoom" column="off_room"/>
		<result property="offUploadUri" column="off_upload_uri"/>
		<result property="offSeats" column="off_seats"/>
		<result property="offStartAt" column="off_start_at"/>
		<result property="offEndAt" column="off_end_at"/>
		<result property="offRoom" column="off_room"/>
		<result property="offCreatedAt" column="off_created_at"/>
		<result property="offModifiedAt" column="off_modified_at"/>
	</resultMap>
	<insert id="insert">
		INSERT 
		INTO off_course
		(off_author, off_category, off_place, off_product_no, off_seats, off_start_at, off_end_at, off_room)
		VALUES(#{offAuthor}, #{offCategory}, #{offPlace}, #{offProductNo}, #{offSeats}, #{offStartAt}, #{offEndAt}, #{offRoom})
	</insert>
	
	<update id="update">
		UPDATE off_course SET
		off_category = #{offCategory}, off_place = #{offPlace}, off_room = #{offRoom}, off_seats = #{offSeats}, 
		off_start_at = #{offStartAt},  off_end_at = #{offEndAt}, off_modified_at = now()
	</update>
	
	<delete id="delete">
		DELETE FROM off_course WHERE off_no = #{offNO}
	</delete>
	
	<select id="getInfoByAuthor" resultMap="OffMap">
		SELECT *
		FROM off_course
		WHERE off_author = #{offAuthor}
	</select>
	<select id="list" resultMap="OffMap">
		SELECT *
		FROM off_course	
	</select>
	<select id="getOneInfo" resultMap = "OffMap">
		SELECT *
		FROM off_course
		WHERE off_no = #{offNo} 
	</select>
	<select id="getInfoByProductNo" resultMap = "OffMap">
		SELECT *
		FROM off_course
		WHERE off_product_no = #{offProductNo} 
	</select>
	<select id="getOffProduct" resultMap="OffProductMap">
		SELECT *
		FROM off_course o, product p
		WHERE p.product_no = #{productNo} 
		AND o.off_product_no = p.product_no
	</select>
		<select id="getOffProductByAuthor" resultMap="OffProductMap">
		SELECT *
		FROM off_course o, product p
		WHERE o.off_author = #{offAuthor}
		AND p.product_no = o.off_product_no 
	</select>
</mapper>